#!/bin/bash

chrome_deb=$(ls /var/cache/apt/archives/google-chrome-stable_*.deb)
backup_dir=/media/data/tools/net

if [ ! -z "$chrome_deb" ]
then
    if [ -f "$backup_dir/google-chrome-latest.deb" ]
    then
        rm -f $backup_dir/google-chrome-latest.deb
    fi
    
    version=$(echo $chrome_deb | cut -d_ -f2 | cut -d. -f1)
    cp $chrome_deb $backup_dir/google-chrome-latest.deb
    exit 0
else
    exit 1
fi
