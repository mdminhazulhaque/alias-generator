#!/usr/bin/env python3

import socket
import os
import sys

def get_ip_address():
    s = socket.socket(socket.AF_INET, socket.SOCK_DGRAM)
    s.connect(("8.8.8.8", 80))
    return s.getsockname()[0]

port = "8000"
url = "http://" + get_ip_address() + ":" + port

print("Server started at " + url)
#os.system("google-chrome " + url + " &")
os.system("python3 -m http.server " + port + " > /dev/null")
# os.system("php -S 0.0.0.0:" + port + " &> /dev/null")
